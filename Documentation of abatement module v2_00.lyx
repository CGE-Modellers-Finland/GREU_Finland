\begin_layout Standard
\begin_inset Formula 
\[
qT_{l}^{i}=min\left\{ \frac{qTE_{l,1}^{i}}{uTE_{l,1}},...,\frac{qTE_{l,E}^{i}}{uTE_{l,E}},\frac{qTK_{l}^{i}}{utk_{l}^{i}}\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $qTE_{l,e}^{i}$
\end_inset

 is energy input 
\begin_inset Formula $e$
\end_inset

 and 
\begin_inset Formula $qTK_{l}^{i}$
\end_inset

 is capital input in the 
\begin_inset Formula $i$
\end_inset

-th variant.
 Note that we assume that 
\begin_inset Formula $uTE_{l,e}$
\end_inset

 is identical for all variants,
 but that 
\begin_inset Formula $utk_{l}^{i}$
\end_inset

 differs.
\end_layout

\begin_layout Standard
In optimum,
 this implies that:
 
\begin_inset Formula 
\begin{equation}
qTE_{l,e}^{i}=uTE_{l,e}\cdot qT_{l}^{i}\label{eq:TE}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
qTK_{l}^{i}=utk_{l}^{i}\cdot qT_{l}^{i}\label{eq:TK}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The price of output by variant 
\begin_inset Formula $i$
\end_inset

 of technology 
\begin_inset Formula $l$
\end_inset

 is as follows:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
pT_{l}^{i}\left(utk_{l}^{i}\right)=\sum_{e}uTE_{l,e}\cdot pTE_{e}+utk_{l}^{i}\cdot pTK_{l}\label{eq:pT}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $pTE_{e}$
\end_inset

 is the input price of energy,
 and 
\begin_inset Formula $pTK$
\end_inset

 is the user cost of capital (the same for all variants).
\end_layout

\begin_layout Standard
The quantity of variant 
\begin_inset Formula $i$
\end_inset

 is restricted by:
 
\begin_inset Formula 
\begin{equation}
qT_{l}^{i}\leq sqT_{l}^{Potential}qES\label{eq:res1}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $sqT_{l}^{Potential}$
\end_inset

 is the relative potential of variant 
\begin_inset Formula $i$
\end_inset

 (the same for all variants) and 
\begin_inset Formula $qES$
\end_inset

 is the total use of the energy service.
\end_layout

\begin_layout Standard
The user of the energy service (a firm or a consumer) seeks to minimize their costs,
 given a fixed level of energy service 
\begin_inset Formula $qES$
\end_inset

,
 and will thus choose to adopt all lower price variants until demand is satisfied.
\end_layout

\begin_layout Standard
Total costs 
\begin_inset Formula $vC$
\end_inset

 is given by:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
vC=\sum_{l}\int_{0}^{\infty}pT_{l}^{i}\left(utk_{l}^{i}\right)\cdot qT_{l}^{i}\left(utk_{l}^{i}\right)\cdot pdf\left(utk_{l}^{i}\right)dutk_{l}^{i}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $qT_{l}^{i}\left(utk_{l}^{i}\right)$
\end_inset

 is 
\begin_inset Formula $qT_{l}^{i}$
\end_inset

 given 
\begin_inset Formula $utk_{l}^{i}$
\end_inset

 (a policy function),
 and where 
\begin_inset Formula $pdf\left(utk_{l}^{i}\right)$
\end_inset

 denotes the probability density function of 
\begin_inset Formula $UTK_{l}$
\end_inset

.
\end_layout

\begin_layout Standard
The total costs should be minimized under the restrictions (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:res1"
plural "false"
caps "false"
noprefix "false"
nolink "false"

\end_inset

) and the restriction:
 
\begin_inset Formula 
\begin{equation}
\sum_{l}\int_{0}^{\infty}qT_{l}^{i}\left(utk_{l}^{i}\right)\cdot pdf\left(utk_{l}^{i}\right)dutk_{l}^{i}=qES\label{eq:res2}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $qES$
\end_inset

 is the total use of the energy service.
 For this purpose,
 we define a Lagrange function:
 
\begin_inset Formula 
\begin{align*}
L & =\sum_{l}\int_{0}^{\infty}pT_{l}^{i}\left(utk_{l}^{i}\right)\cdot sqT_{l}^{i}\left(utk_{l}^{i}\right)\cdot pdf\left(utk_{l}^{i}\right)dutk_{l}^{i}\\
 & -pES^{marg}\left(\sum_{l}\int_{0}^{\infty}sqT_{l}^{i}\left(utk_{l}^{i}\right)\cdot pdf\left(utk_{l}^{i}\right)dutk_{l}^{i}-1\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula 
\[
sqT_{l}^{i}\left(utk_{l}^{i}\right)\equiv\frac{qT_{l}^{i}\left(utk_{l}^{i}\right)}{qES}
\]

\end_inset


\end_layout

\begin_layout Standard
and 
